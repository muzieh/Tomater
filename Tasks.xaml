<Window x:Class="Tomater.Tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tasks" Height="300" Width="310" Loaded="Window_Loaded">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition MaxHeight="40" MinHeight="40"/>
		</Grid.RowDefinitions>
		<DataGrid AutoGenerateColumns="True" Name="dataGrid1" CurrentCellChanged="dataGrid1_CurrentCellChanged">
		</DataGrid>
		<StackPanel Grid.Row="1" Name="stackPanel1" Orientation="Horizontal">
			<TextBox Height="23" Name="textTask" Width="150" />
			<Button Content="Add" Height="23" Name="buttonAdd" Width="50" Click="buttonAdd_Click" />
			<Button Content="Del " Height="23" Name="buttonDelete" Width="50" Click="buttonDelete_Click" />
		</StackPanel>
	</Grid>
</Window>
